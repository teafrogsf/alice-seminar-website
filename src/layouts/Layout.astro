---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "ALICE Seminar - AI, Linguistics, Informatics, Cognition & Embodiment" } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- Navigation -->
    <nav class="sticky top-0 bg-alice-bg/95 backdrop-blur-sm border-b border-gray-200 z-50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <a href="/" class="flex items-center space-x-2">
            <span class="text-2xl font-serif font-bold text-alice-text">ALICE Seminar</span>
          </a>
          <div class="flex space-x-8">
            <a href="/" class="text-alice-gray hover:text-alice-text transition-colors">首页</a>
            <a href="/archive" class="text-alice-gray hover:text-alice-text transition-colors">归档</a>
            <a href="/about" class="text-alice-gray hover:text-alice-text transition-colors">关于</a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-24">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="text-center">
          <p class="text-alice-gray text-sm">
            © {new Date().getFullYear()} ALICE Seminar. All rights reserved.
          </p>
          <p class="text-alice-light-gray text-xs mt-2">
            AI, Linguistics, Informatics, Cognition & Embodiment
          </p>
        </div>
      </div>
    </footer>

    <style is:global>
      @import '../styles/global.css';
    </style>
  </body>
</html>

